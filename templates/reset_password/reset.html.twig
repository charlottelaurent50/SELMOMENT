{% extends 'base.html.twig' %}
{% block title %}Réinitialiser le mot de passe
{% endblock %}
{% block header %}Réinitialiser le mot de passe
{% endblock %}

{% block style %}
	.nomChamp{
				text-align:right;
			    padding-right:20px;
			}
			table{
			    margin:auto ;
			}
			
			.row{
			    margin:0 !important;
			}

{% endblock %}


{% block body %}
	<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
		<div class="panel panel-default">
			<div class="panel-body">
				{{ form_start(resetForm) }}
				<table>
					<tr>
						<td class="nomChamp">
							Nouveau mot de passe <br>
							Répétez le mot de passe
						</td>
						<td>

							{{ form_row(resetForm.plainPassword, {
                        class : "form-control"
                    }) }}
						</td>
					</tr>
				</table>
				<hr>
				<div class="row">
					<button class="btn btn-action">Modifier le mot de passe</button>
				</div>
				{{ form_end(resetForm) }}
			</div>
		</div>
	</div>
{% endblock %}
