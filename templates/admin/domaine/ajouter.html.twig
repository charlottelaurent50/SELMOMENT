{% extends 'baseAdmin.html.twig' %}

{% block title %}Ajouter domaine / catégorie / statut / type{% endblock %}

{% block breadcrumb %}
<li><a href="{{path('route_accueil')}}">Accueil</a></li> 
<li class="active">Ajouter domaine / catégorie / statut / type</li>
{% endblock %}

{% block header %} Ajouter domaine / catégorie / statut / type {% endblock %}


{% block style %}
.col-md-offset-3 {
    margin-left: 0 !important;
}
.col-md-6 {
    width: 100% !important;
}
{% endblock %}

{% block bodyAdmin %}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            {{ form_start(domaineForm) }}

            <table>
                <tr>
                    <td> Libelle </td>
                    <td>
                        {{ form_row(domaineForm.libelle, {
                            class : "form-control"
                        }) }}
                    </td>
                    <td>
                        Domaines existants : 
                        <ul>
                            {% for d in domaines %}
                            <li>{{ d.libelle }} <a href="{{ path('domaineSupprimer', { 'id': d.id }) }}">Supprimer</a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>

            <div class="row">
                <div class="col-lg-4 text-right">
                    <button class="btn btn-action" type="submit">Créer le domaine</button>
                </div>
            </div>
            {{ form_end(domaineForm) }}
        </div>
        </div>

    <div class="panel panel-default">
        <div class="panel-body">
            {{ form_start(typeForm) }}

            <table>
                <tr>
                    <td> Libelle </td>
                    <td>
                        {{ form_row(typeForm.libelle, {
                            class : "form-control"
                        }) }}
                    </td>
                    <td>
                        Types existants : 
                        <ul>
                            {% for t in types %}
                            <li>{{ t.libelle }} <a href="{{ path('typeSupprimer', { 'id': t.id }) }}">Supprimer</a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>

            <div class="row">
                <div class="col-lg-4 text-right">
                    <button class="btn btn-action" type="submit">Créer le type</button>
                </div>
            </div>
            {{ form_end(typeForm) }}
        </div>
        </div>

    <div class="panel panel-default">
        <div class="panel-body">
            {{ form_start(categorieForm) }}

            <table>
                <tr>
                    <td> Libelle </td>
                    <td>
                        {{ form_row(categorieForm.libelle, {
                            class : "form-control"
                        }) }}
                    </td>
                    <td>
                        Catégories existantes : 
                        <ul>
                            {% for c in categories %}
                            <li>{{ c.libelle }} <a href="{{ path('categorieSupprimer', { 'id': c.id }) }}">Supprimer</a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>

            <div class="row">
                <div class="col-lg-4 text-right">
                    <button class="btn btn-action" type="submit">Créer la catégorie</button>
                </div>
            </div>
            {{ form_end(categorieForm) }}
        </div>
        </div>

    <div class="panel panel-default">
        <div class="panel-body">
            {{ form_start(statutForm) }}

            <table>
                <tr>
                    <td> Libelle </td>
                    <td>
                        {{ form_row(statutForm.libelle, {
                            class : "form-control"
                        }) }}
                    </td>
                    <td>
                        Statuts existants : 
                        <ul>
                            {% for s in statuts %}
                            <li>{{ s.libelle }} <a href="{{ path('statutSupprimer', { 'id': s.id }) }}">Supprimer</a></li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>

            <div class="row">
                <div class="col-lg-4 text-right">
                    <button class="btn btn-action" type="submit">Créer le statut</button>
                </div>
            </div>
            {{ form_end(statutForm) }}
        </div>
    </div>
</div>

{% endblock %}
