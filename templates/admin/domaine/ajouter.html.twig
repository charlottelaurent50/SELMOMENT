{% extends 'baseAdmin.html.twig' %}

{% block title %}Ajouter un domaine{% endblock %}

{% block breadcrumb %}
<li><a href="{{path('route_accueil')}}">Accueil</a></li> 
<li class="active">Ajouter un domaine</li>
{% endblock %}

{% block header %} Ajouter un domaine {% endblock %}


{% block style %}
.col-md-offset-3 {
    margin-left: 0 !important;
}
.col-md-6 {
    width: 100% !important;
}
{% endblock %}

{% block bodyAdmin %}

<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-default">
        <div class="panel-body">
            {{ form_start(form) }}

            <table>
                <tr>
                    <td> Libelle </td>
                    <td>
                        {{ form_row(form.libelle, {
                            class : "form-control"
                        }) }}
                    </td>
                    <td>
                        Domaines existants : 
                        <ul>
                            {% for d in domaines %}
                            <li>{{ d.libelle }}</li>
                            {% endfor %}
                        </ul>
                    </td>
                </tr>
            </table>

            <div class="row">
                <div class="col-lg-4 text-right">
                    <button class="btn btn-action" type="submit">Cr√©er</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}
