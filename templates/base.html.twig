 <script>
		    function onClickBtnArchive(event) {
		        event.preventDefault();
		
		        const url = this.href;
		        const pText = this.querySelector('p.archive');
		        const tr = this.closest('tr');
		
		        axios.post(url).then(function(response) {
		            // Mettre à jour le texte du bouton en fonction de la réponse
		            if (pText.textContent === 'Archiver') {
		                pText.textContent = 'Désarchiver';
		                tr.style.backgroundColor = 'rgba(255, 0, 0, 0.2)';
		            } else {
		                pText.textContent = 'Archiver';
		                tr.style.backgroundColor = 'initial';
		            }
		        }).catch(function(error) {
		            console.error(error);
		        });
		    }
		
		    document.querySelectorAll('a.archive-button').forEach(function(link) {
		        link.addEventListener('click', onClickBtnArchive);
		    });
		</script>{% block script %}{% endblock %}</body></html>
