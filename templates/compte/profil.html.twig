{% extends 'baseProfil.html.twig' %}

{% block style %}
.soustitre{
	text-align:right;
}
td{
    min-width : 100px !important;
    padding : 5px;
}
{% endblock %}

{% block bodyProfil %}

<table class="descrCompte">
            <tr>
                <td class="soustitre"> Numéro d'adhérent </td>
                <td>
                    {{ compte.numAdherent }}
                </td>
            </tr>
             <tr>
                <td class="soustitre"> Actif ?</td>
                {% if compte.actif == 1 %}
                <td>
                {% if compte.dateDernierPaiement %}
                    {% set expirationDate = compte.dateDernierPaiement|date_modify('+1 year') %}
                    Votre adhésion est active jusqu'au {{ expirationDate|date('d/m/Y') }}.
                {% else %}
                    Votre adhésion est actif mais il n'y a pas de date de dernier paiement.
                {% endif %}
                </td>
                {% else %}
                <td>
                    Votre adhésion n'est pas active, vous devez payer l'adhésion
                </td>
                {% endif %}
            </tr>
            {% if compte.dateAdhesion is not null %}
                <tr>
                    <td class="soustitre"> Date d'adhésion </td>
                    <td>
                        {{ compte.dateAdhesion|date('d/m/Y') }}
                    </td>
                </tr>
            {% endif %}
            <tr>
                <td class="soustitre"> Email </td>
                <td>
                    {{ compte.email }}
                </td>
            </tr>
            <tr>
                <td class="soustitre"> Nom </td>
                <td>
                    {{ compte.nom }}
                </td>
            </tr>
            <tr>
                <td class="soustitre"> Prenom </td>
                <td>
                    {{ compte.prenom }}
                </td>
            </tr>
            <tr>
                <td class="soustitre"> Adresse </td>
                <td>
                    {{ compte.adresse }}
                </td>
            </tr>
            <tr>
                <td class="soustitre"> Code postal </td>
                <td>
                    {{ compte.codePostal }}
                </td>
            </tr>
            <tr>
                <td class="soustitre"> Ville </td>
                <td>
                    {{ compte.ville }}
                </td>
            </tr>
            <tr>
                <td class="soustitre"> Téléphone </td>
                <td>
                    {{ compte.telephone }}
                </td>
            </tr>
            </table>
{% endblock %}