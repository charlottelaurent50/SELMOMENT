{% extends 'baseProfil.html.twig' %}

{% block title %}Les annonces{% endblock %}

{% block annonce %} class="active" {% endblock %}

{% block breadcrumb %}
<li><a href="{{path('route_accueil')}}">Accueil</a></li> 
<li class="active">Les annonces</li>
{% endblock %}

{% block header %} Les annonces {% endblock %}

{% block style %} 
.carousel {
	width: 100%;
	display: flex;
}

.carousel img {
	width: 100%;
	height: 100%;
	object-fit: cover;
}

table{
	text-align:center;
}

tr{
	border-bottom:solid 1px rgba(1,1,1,0.2);
	}
{% endblock %}

{% block bodyProfil %}

		<table class="card">
		<thead>
			<tr>
				<td>Image(s)</td>
				<td>Titre</td>
				<td>Localisation</td>
			</tr>
		</thead>
		{% for a in pAnnonces %}
		<tr>
			<td style="width:20%">
				<div class="carousel">
				{% for i in a.images %}
					<img src="{{ asset( 'uploads/' ~ i.chemin ) }}" style="width:100%">
					{% endfor %}
				</div>
			</td>
				<td><a href="{{ path('annonceConsulter', { 'id': a.id }) }}">{{ a.titre }}</a></td>
				<td>{{ a.localisation }}</td>
		</tr>
	{% else %}
		Aucune annonce n'a été trouvé.
	{% endfor %}
</table>
	
{% endblock %}
